{
  "Context": {
    "Payment": {
      "BaseCurrency": "EUR",
      "Cash": null,
      "Cashless": null
    },
    "Storage": {
      "DbScriptFile": "cache.sql",
      "DbFilePath": "cache.db",
      "MaxDatabaseSizeMB": 500
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {SourceContext}: {Message}{NewLine}{Exception}",
          "pathFormat": "C:\\Filuet\\logs\\onboard\\log-{Date}.txt",
          "path": "C:\\Filuet\\logs\\onboard\\log-.txt",
          "pathArchive": null,
          "allFilesSizeLimitBytes": 3000,
          //"hooks": "SerilogHooks::MyArchiveHooks,HostApp",
          "fileSizeLimitBytes": 1000,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ApiUrl": "http://ascdev-sandbox.azurewebsites.net/"
}
